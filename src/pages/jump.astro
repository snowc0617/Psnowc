      case 'hanime1':
        return `https://hanime1.me/watch?v=${id}`;
      case 'pixiv':
        return `https://www.pixiv.net/artworks/${id}`;
      default:
        return '#';
    }
  };

  const animateGrid = (updateFn: () => void) => {
    const firstPositions = new Map<Element, DOMRect>();
    buttons.forEach(btn => firstPositions.set(btn, btn.getBoundingClientRect()));

    updateFn();

    buttons.forEach(btn => {
      const first = firstPositions.get(btn);
      const last = btn.getBoundingClientRect();
      
      if (!first) return;

      const dx = first.left - last.left;
      const dy = first.top - last.top;

      if (dx !== 0 || dy !== 0) {
        const el = btn as HTMLElement;
        el.style.transition = 'none';
        el.style.transform = `translate(${dx}px, ${dy}px)`;
        
        requestAnimationFrame(() => {
          el.style.transition = 'transform 0.5s cubic-bezier(0.25, 0.8, 0.25, 1)';
          el.style.transform = '';
        });

        el.addEventListener('transitionend', () => {
          el.style.transition = '';
          el.style.transform = '';
        }, { once: true });
      }
    });
  };

  const updateSuggestions = (val: string) => {
    animateGrid(() => {
      buttons.forEach(btn => {
        btn.classList.remove('recommended');
        (btn as HTMLElement).style.order = '0'; 
      });
      
      if (suggestionText) {
        suggestionText.textContent = '';
        suggestionText.classList.remove('visible');
      }

      if (!val) return;

      const isNum = /^\d+$/.test(val);
      const isDLsiteCode = /^(RJ|BJ)/i.test(val);
