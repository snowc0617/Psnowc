        if (isDLsiteCode) {
          targetSites = ['dlsite'];
          hintMessage = "åµæ¸¬åˆ° DLsite æ ¼å¼ (RJ/BJè™Ÿ)";
        } else if (isNum) {
          if (len <= 6) {
            targetSites = ['nhentai', 'jmcomic', 'wnacg', 'ehentai', 'exhentai'];
            possibleNames = ["nHentai", "ç¦æ¼«", "ç´³å£«", "EH", "EX"];
            if (len >= 3) { targetSites.push('pixiv'); possibleNames.push("Pixiv"); }
            if (len >= 5) { targetSites.push('hanime1'); possibleNames.push("Hanime1"); }
            if (len === 6) { targetSites.push('dlsite'); possibleNames.push("DLsite"); }
          } else if (len === 7) {
            targetSites = ['jmcomic', 'ehentai', 'exhentai', 'dlsite', 'pixiv'];
            possibleNames = ["ç¦æ¼«", "EH", "EX", "DLsite", "Pixiv"];
          } else if (len === 8) {
            targetSites = ['dlsite', 'pixiv'];
            possibleNames = ["DLsite", "Pixiv"];
          } else if (len === 9) {
            targetSites = ['pixiv'];
            possibleNames = ["Pixiv"];
          } else {
            targetSites = [];
            possibleNames = [];
          }

          if (possibleNames.length > 0) {
            hintMessage = `è¼¸å…¥ç‚º ${len} ä½æ•¸å­—ï¼Œå¯èƒ½æ˜¯ ` + possibleNames.join(" / ");
          } else {
            hintMessage = `è¼¸å…¥ç‚º ${len} ä½æ•¸å­—`;
          }
        }

        if (targetSites.length > 0) {
          targetSites.forEach((site) => {
            const btn = document.querySelector(`.portal-card[data-site="${site}"]`) as HTMLElement;
            if (btn) {
              btn.classList.add('recommended');
              btn.style.order = '-1';
            }
          });
          
          if (suggestionText) {
            suggestionText.textContent = `ğŸ’¡ ${hintMessage}`;
            suggestionText.classList.add('visible');
          }
        }
      } 
      // â˜…â˜…â˜… æœå°‹æ¨¡å¼ä¸‹ï¼šå¯ä»¥é¸æ“‡ä¸éœ€é«˜äº®ï¼Œæˆ–è€…é«˜äº®å…¨éƒ¨ï¼Œé€™è£¡é¸æ“‡ä¸é«˜äº®ï¼Œå› ç‚ºæ‰€æœ‰ç¶²ç«™éƒ½èƒ½æœ â˜…â˜…â˜…
    });
  };

  input?.addEventListener('input', (e) => {
    const val = (e.target as HTMLInputElement).value.trim();
    updateSuggestions(val);
  });

  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      if (!input) return;
      const val = input.value.trim();
      const site = btn.getAttribute('data-site') || '';

      if (!val) {
        alert('è«‹å…ˆè¼¸å…¥å…§å®¹ï¼(ï½€ï½¥Ï‰ï½¥Â´)');
        input.focus();
        input.classList.add('shake');
        setTimeout(() => input.classList.remove('shake'), 500);
        return;
      }

      // å‘¼å«æ–°çš„ getUrlï¼Œå‚³å…¥ç•¶å‰æ¨¡å¼
      const targetUrl = getUrl(site, val);
      window.open(targetUrl, '_blank');
    });
  });

  input?.addEventListener('keypress', (e: KeyboardEvent) => {
    if (e.key === 'Enter') {
      const val = input.value.trim();
      if (val) {
        // å¦‚æœæ˜¯ ID æ¨¡å¼ä¸”æœ‰æ¨è–¦ï¼Œé–‹æ¨è–¦ï¼›å¦å‰‡é è¨­ nhentai
        // å¦‚æœæ˜¯ Search æ¨¡å¼ï¼Œé è¨­é–‹ nhentai æœå°‹
        let site = 'nhentai';
        if (currentMode === 'id') {
            const recommendedBtn = document.querySelector('.portal-card.recommended');
            if (recommendedBtn) site = recommendedBtn.getAttribute('data-site') || 'nhentai';
        }
        
        const targetUrl = getUrl(site, val);
        window.open(targetUrl, '_blank');
      }
    }
  });
</script>

