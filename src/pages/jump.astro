    // 2. æœå°‹æ¨¡å¼ (é—œéµå­—æœå°‹é‚è¼¯)
    else {
      // è™•ç†é—œéµå­—ç·¨ç¢¼ (é¿å…ä¸­æ–‡äº‚ç¢¼)
      const q = encodeURIComponent(val);
      switch (site) {
        case 'nhentai': return `https://nhentai.net/search/?q=${q}`;
        case 'jmcomic': return `https://18comic.vip/search/photos?search_query=${q}`;
        case 'wnacg': return `https://www.wnacg.com/search/?q=${q}&f=_all&s=create_time_DESC`;
        case 'ehentai': return `https://e-hentai.org/?f_search=${q}`;
        case 'exhentai': return `https://exhentai.org/?f_search=${q}`;
        case 'dlsite': return `https://www.dlsite.com/home/fsr/=/keyword/${q}`;
        case 'hanime1': return `https://hanime1.me/search?query=${q}`;
