---
// src/layouts/BaseLayout.astro
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// 1. 接收外部傳入的參數
const { pageTitle, pageDescription, frontmatter } = Astro.props;

const siteTitle = "SnowcNEWS";

// ★★★ 關鍵修正：定義最終顯示的標題 (finalTitle) ★★★
// 邏輯：先看有沒有 pageTitle -> 再看文章有沒有 frontmatter.title -> 最後用網站預設標題
const finalTitle = pageTitle || frontmatter?.title || siteTitle;

// 處理描述
const description = pageDescription || frontmatter?.description || "專注於視覺小說、ACG 音樂與技術開發的資訊站。";

// 處理圖片
const image = frontmatter?.image?.url || "/default-og.png"; 

const canonicalURL = new URL(Astro.url.pathname, Astro.site || "http://localhost:4321");
---

<html lang="zh-Hant">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    
    {/* --- 基本 SEO --- */}
    {/* 使用修正後的 finalTitle */}
    <title>{finalTitle} | {siteTitle}</title>
    <meta name="description" content={description} />

    {/* --- Open Graph (Facebook, Discord, Line) --- */}
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    
    {/* 這裡也要改成 finalTitle */}
    <meta property="og:title" content={finalTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />
    
    {/* 加入 Site Name 讓 Discord 顯示更完整 */}
    <meta property="og:site_name" content={siteTitle} />

    {/* --- Twitter Card (Twitter/X) --- */}
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url.href} />
    <meta property="twitter:title" content={finalTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <meta name="google-site-verification" content="uMm4XWN4J9D66wXVL4HUZgAKOLiZl0JdHpYnJSRnMYk" />

  </head>
  <body>
    <Header />

    <main class="container">
      <slot />
    </main>

    <Footer />

    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
